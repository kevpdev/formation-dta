	<groupId>dta.pizzeria</groupId>
	<artifactId>kevin-dta-pizzeria-client</artifactId>
	<version>1</version>
	<packaging>jar</packaging>

	<name>kevin-dta-pizzeria-client</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>dta.pizzeria</groupId>
			<artifactId>kevin-dta-pizzeria-model</artifactId>
			<version>1</version>
		</dependency>
		<dependency>
			<groupId>dta.pizzeria</groupId>
			<artifactId>kevin-dta-pizzeria-dao</artifactId>
			<version>1</version>
		</dependency>
		<dependency>
			<groupId>dta.pizzeria</groupId>
			<artifactId>kevin-dta-pizzeria-console</artifactId>
			<version>1</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
		</dependency>
		<dependency>
			<groupId>org.hibernate.javax.persistence</groupId>
			<artifactId>hibernate-jpa-2.1-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-core</artifactId>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
